#!/usr/bin/env perl

use strict;

use Carp;
use File::Basename;
use Cwd 'abs_path';

my $dest = $ENV{TARGET} || "/kb/runtime";
if (@ARGV)
{
    $dest = shift;
    print STDERR "Overriding destination to $dest\n";
}

my $parallel = 8;

my $vers = "8.32";
-d $dest || mkdir $dest;

# https://ftp.gnu.org/gnu/coreutils/coreutils-8.32.tar.gz

my $package_dir = "coreutils-${vers}";
my $package_tar = "$package_dir.tar.gz";
my $package_url = "https://ftp.gnu.org/gnu/coreutils/$package_tar";

if (! -s $package_tar)
{
    system("curl", "-o", $package_tar, "-L", $package_url);
}

run("rm", "-rf", $package_dir);
run("tar", "xzfp", $package_tar);
chdir($package_dir) or die "cannot chdir $package_dir: $!";

run("./configure", "--prefix", $dest);
run("make", "-j", $parallel);

run("cp", "src/sort", "$dest/bin/gnu-sort");
sub run
{
    print "@_\n";
    my $rc = system(@_);
    $rc == 0 or die "Command failed with rc=$rc: @_\n";
}
