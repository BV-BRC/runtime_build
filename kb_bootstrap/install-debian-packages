#!/bin/bash

if [[ $# != 1 ]] ; then
	echo "Usage: $0 package-list" 1>&2
	exit 1
fi

pkg_list=$1
# kludge to get emacs23 working
export LANG=C
echo "LANG set to $LANG"

for pkg in `cat $pkg_list` ; do
	echo "install $pkg"
	apt-get -y install $pkg
	if [[ $? -ne 0 ]] ; then
		echo "Failure installing $pkg" 1>&2
        echo "LANG was set to $LANG"
	fi
done
